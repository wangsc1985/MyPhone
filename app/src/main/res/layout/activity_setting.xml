<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wang17.myphone.activity.SettingActivity">


    <fragment
        android:id="@+id/fragment_action"
        android:name="com.wang17.myphone.fragment.ActionBarFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_action_bar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_runlog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_option"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_action">

    </ListView>

    <ListView
        android:id="@+id/listView_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_action"
        app:layout_constraintBottom_toTopOf="@+id/layout_option" />

    <ImageView
        android:id="@+id/imageView_handle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="?android:attr/colorControlHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/handle" />

    <LinearLayout
        android:id="@+id/layout_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageView_handle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/headset" />

            <SeekBar
                android:id="@+id/seekBar_headset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/voice" />

            <SeekBar
                android:id="@+id/seekBar_volumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Switch
                android:id="@+id/switch_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:visibility="gone" />

            <Switch
                android:id="@+id/switch_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:visibility="gone" />

            <Switch
                android:id="@+id/switch_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:visibility="gone" />

            <Switch
                android:id="@+id/switch_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="1" />

            <Button
                android:id="@+id/button_2"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/button_1"
                android:layout_below="@+id/button_1"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/button_3"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/button_1"
                android:layout_below="@+id/button_1"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/button_4"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/button_1"
                android:layout_below="@+id/button_1"
                android:layout_weight="1"
                android:text="4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_5"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/button_1"
                android:layout_below="@+id/button_1"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/button_7"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/button_1"
                android:layout_below="@+id/button_1"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                style="@style/setting_button"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/button_1"
                android:layout_below="@+id/button_1"
                android:layout_weight="1"
                android:text="8" />

            <Switch
                android:id="@+id/switch_tradeAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_locationGear"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled" />

            <Spinner
                android:id="@+id/spinner_musicName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
