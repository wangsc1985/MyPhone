<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tallay_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wang17.myphone.activity.TallayRecordActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.wang17.myphone.fragment.ActionBarFragment"
        android:id="@+id/fragment_action"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_action_bar" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_records"
        android:layout_below="@+id/fragment_action"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indicatorRight="30dp"
        android:background="@color/common_google_signin_btn_text_dark_default"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:clickable="true"
        app:backgroundTint="@color/a"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add" />
</RelativeLayout>
