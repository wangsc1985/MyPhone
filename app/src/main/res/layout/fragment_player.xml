    <android.support.constraint.ConstraintLayout
        android:id="@+id/frameLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <ImageView
            android:id="@+id/iv_pitch_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/iv_buddha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/my_abc_btn_default_mtrl_shape" />

        <ImageView
            android:id="@+id/iv_pitch_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_buddha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_pitch_add"
            app:srcCompat="@drawable/my_abc_btn_default_mtrl_shape" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="133dp" />

        <ImageView
            android:id="@+id/iv_buddha"
            android:layout_width="290dp"
            android:layout_height="0dp"
            android:rotation="0"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nf"
            tools:layout_conversion_absoluteHeight="400dp"
            tools:layout_conversion_absoluteWidth="270dp"
            tools:srcCompat="@drawable/nf" />

        <ImageView
            android:id="@+id/iv_speed_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_buddha"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/my_abc_btn_default_mtrl_shape" />

        <ImageView
            android:id="@+id/iv_speed_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_buddha"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:srcCompat="@drawable/my_abc_btn_default_mtrl_shape" />
    </android.support.constraint.ConstraintLayout>

