    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音1.00调  速1.00度"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_buddha_name" />

    <TextView
        android:id="@+id/tv_buddha_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_map_btn_normal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="               阿弥陀佛               "
        android:textColor="@color/calendar_yl_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout7" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_muyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:clickable="true"
        app:elevation="3dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fab_buddha"
        app:layout_constraintEnd_toStartOf="@+id/fab_buddha"
        app:layout_constraintTop_toTopOf="@+id/fab_buddha"
        app:srcCompat="@drawable/muyu" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_buddha"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:src="@drawable/ic_nf"
        app:backgroundTint="@color/colorAccent"
        app:elevation="3dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
