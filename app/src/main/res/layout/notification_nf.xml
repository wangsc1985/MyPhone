<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_topTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:text="一門深入 長時薰修"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_gray"
                android:gravity="center"
                android:text="0 : 30 : 00"
                android:textColor="@color/calendar_yl_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="?android:attr/listDivider"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/calendar_yl_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--            <View-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:background="@color/calendar_yl_color"></View>-->

        </LinearLayout>

        <ImageView
            android:id="@+id/image_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="@drawable/button_action_dark"
            android:padding="15dp"
            app:srcCompat="@drawable/pause" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_timeTotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_gray"
                android:gravity="center"
                android:text="1 : 40 : 00"
                android:textColor="@color/calendar_yl_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--            <View-->
            <!--                android:id="@+id/view2"-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_weight="1"-->
            <!--                android:background="@color/calendar_yl_color"></View>-->

            <TextView
                android:id="@+id/tv_countTotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="?android:attr/listDivider"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/calendar_yl_color"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:text="人生苦短 終歸塵土"
        android:textSize="12sp" />

</LinearLayout>